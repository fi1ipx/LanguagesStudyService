<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-4.2.xsd">

	<http auto-config="true">
		<intercept-url pattern="/**" access="hasRole('ROLE_USER')" />
                <logout logout-success-url="/" invalidate-session="true" logout-url="/logout" />
	</http>

	<authentication-manager>
	  <authentication-provider>
	    <user-service>
		<user name="admin" password="{noop}admin" authorities="ROLE_USER" />
	    </user-service>
	  </authentication-provider>
	</authentication-manager>

    <beans:bean id ="passwordEncoder" class = "org.springframework.security.crypto.password.NoOpPasswordEncoder" factory-method = "getInstance" /> 
    
</beans:beans>
